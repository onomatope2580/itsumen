<div class="page">
  <div class="members">
    <div class="side-tag page-title"></div>
    <div class="member"><%= link_to "末吉", "#", class:"person" %></div>
    <div class="member"><%= link_to "田村", "#", class:"person" %></div>
    <div class="member"><%= link_to "濱田", "#", class:"person" %></div>
    <div class="member"><%= link_to "山口", "#", class:"person" %></div>
  </div>

  <div class="records">
    <%# ↓ここを繰り返す %>
    <% unless @rooms.empty? %>
      <% @rooms.each do |room| %>
        <a href="/rooms/<%= room.id %>/records" class="to-records">
          <div class="record">
            <div class="top-bar">
              <div class="side-tag"><%= room.date %></div>
              <div class="member point num">点数</div>
              <div class="member point num">点数</div>
              <div class="member point num">点数</div>
              <div class="member point num">点数</div>
            </div>
            <div class="under-bar">
              <div class="side-tag">清</div>
              <div class="member point num">清算</div>
              <div class="member point num">清算</div>
              <div class="member point num">清算</div>
              <div class="member point num">清算</div>
            </div>
          </div>
        </a>
      <% end %>
    <% end %>
    <%# ↑ここまで繰り返す %>
  </div>

  <div class="results">
    <div class="result total">
      <div class="side-tag">合計</div>
      <div class="member num">点数</div>
      <div class="member num">点数</div>
      <div class="member num">点数</div>
      <div class="member num">点数</div>
    </div>
    <div class="result">
      <div class="side-tag">平均順位</div>
      <div class="member num">点数</div>
      <div class="member num">点数</div>
      <div class="member num">点数</div>
      <div class="member num">点数</div>
    </div>
  </div>

  <div class="add">
    <div class="add-record">
      <%= link_to "対局を追加",  new_room_path, id:"add-battle", class:"add-battle" %>
    </div>
  </div>
</div>